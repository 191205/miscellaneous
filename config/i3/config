# Poll X11 for an accent color, default to black.
set_from_resource $accent accent #ffffff

new_window normal
hide_edge_borders vertical
for_window [class="^.*"] border pixel 1

# Class                 Border  Backgr. Text    Indicator Child_Border
client.focused          $accent $accent $white $accent $accent
client.focused_inactive $grey #5f676a #ffffff #484e50   #5f676a
client.unfocused        $black #222222 #888888 #292d2e   #222222
client.urgent           $red #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       $dim_grey

